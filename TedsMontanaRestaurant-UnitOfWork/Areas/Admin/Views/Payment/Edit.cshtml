@model TedsMontanaRestaurantModel.Payment

<h2>Ödemeyi Düzenle</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PaymentId" />

    <div class="form-group">
        <label asp-for="OrderId" class="control-label">Sipariş ID:</label>
        <select asp-for="OrderId" asp-items="@ViewBag.orderList" class="form-control"></select>
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Amount" class="control-label">Toplam Ödeme:</label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Ödeme Listesine Geri Dön</a>
